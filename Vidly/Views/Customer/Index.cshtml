@model List<Vidly.Models.Customer>

<h1>Customers</h1>



@if (Model.Count > 0)
{
    <table border="1" class="table">
        <tr><th>Customers</th></tr>
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    <a href="/customer/Details/@customer.Id">@customer.Name</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>We do not have Any Customers</p>
}
