@model List<Vidly.Models.Customer>

<h1>Customers</h1>

<br />
<form action="/customer/new">
    <input type="submit" value="New Customer" class="btn btn-primary">
</form>
<br />


@if (Model.Count > 0)
{
<table border="1" class="table">
    <tr><th>Customers</th>
    <th>Membership Type</th></tr>
    @foreach (var customer in Model)
    {
        <tr>
            <td>
                <a href="/customer/edit/@customer.Id">@customer.Name</a>


            </td>
            <td>
               @customer.MembershipType.Name
            </td>
        </tr>
    }
</table>
}
else
{
    <p>We do not have Any Customers</p>
}
